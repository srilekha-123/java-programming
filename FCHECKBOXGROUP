import java.awt.*;
public class Ch2{
public static void main(String args[]){
Frame f=new Frame("check box  group");
CheckboxGroup cb=new CheckboxGroup();
Checkbox cg1=new Checkbox("c++",cb,false);
cg1.setBounds(50,100,100,30);
Checkbox cg2=new Checkbox("c",cb,true);
cg2.setBounds(50,150,100,30);
f.add(cg1);
f.add(cg2);
f.setSize(400,400);
f.setLayout(null);
f.setVisible(true);
}
}
